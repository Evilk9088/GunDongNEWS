<Window x:Class="桌面新闻.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="微博热搜" 
        Height="20" 
        Width="1200"
        WindowStyle="None"
        ShowInTaskbar="False"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True" Top="2" Left="360">

    <Canvas x:Name="MarqueeCanvas" ClipToBounds="True">
        <TextBlock x:Name="MarqueeText1" 
                  Foreground="White" 
                  FontSize="15"
                  VerticalAlignment="Center"/>
        <TextBlock x:Name="MarqueeText2" 
                  Foreground="White" 
                  FontSize="15"
                  VerticalAlignment="Center"/>
    </Canvas>
</Window>
